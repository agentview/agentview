{
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "src/bin/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "ES2022", "DOM"
    ],
    "types": [
      "node"
    ],
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}