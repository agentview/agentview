{
  "name": "@agentview/monorepo",
  "private": true,
  "version": "0.1.5",
  "scripts": {
    "publish": "node ./publish.mjs",
    "db:clear": "pnpm --filter ./apps/api db:clear",
    "db:generate": "pnpm --filter ./apps/api drizzle-kit generate",
    "dev:api": "pnpm --filter ./apps/api dev",
    "dev:webapp": "pnpm --filter ./apps/webapp dev",
    "dev:docs": "pnpm --filter ./apps/docs dev",
    "dev:drizzle-studio": "(cd apps/api && npx drizzle-kit studio)",
    "dev": "concurrently --colors -n api,webapp,docs,drizzle -c blue,green,yellow,magenta \"pnpm run dev:api\" \"pnpm run dev:webapp\" \"pnpm run dev:docs\" \"pnpm run dev:drizzle-studio\"",
    "seed-users": "pnpm --filter ./apps/tests seed-users"
  },
  "pnpm": {
    "overrides": {
      "zod": "^4.1.12"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
