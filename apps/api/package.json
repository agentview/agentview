{
  "name": "@agentview/api",
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "http:dev": "tsx watch src/index.ts",
    "worker:dev": "tsx watch src/worker.ts",
    "dev": "concurrently \"npm run http:dev\" \"npm run worker:dev\"",
    "http:start": "tsx src/index.ts",
    "worker:start": "tsx src/worker.ts",
    "http:kill": "bash -c 'kill -9 $(lsof -t -i :${AGENTVIEW_API_PORT}) || true'",
    "build": "tsc --noEmit && tsc",
    "db:clear": "tsx scripts/db-clear.ts",
    "db:test": "tsx scripts/db-test.ts",
    "test": "vitest"
  },
  "dependencies": {
    "@agentview/utils": "workspace:*",
    "@hono/node-server": "^1.19.0",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.5",
    "@types/jsonwebtoken": "^9.0.10",
    "agentview": "workspace:*",
    "better-auth": "^1.2.12",
    "dotenv": "^17.1.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.4",
    "jsonwebtoken": "^9.0.2",
    "openai": "^6.7.0",
    "pg": "^8.16.3",
    "resend": "^6.6.0",
    "tsx": "^4.7.1",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^4.0.7",
    "concurrently": "^9.2.1",
    "typescript": "^5.8.3",
    "vitest": "^4.0.7"
  },
  "license": "AGPL-3.0"
}
